<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/win"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/win_lose_circle1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:srcCompat="@drawable/vector_2" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:letterSpacing="0.23"
                    android:text="@string/you"
                    android:textColor="@color/primary"
                    android:textFontWeight="700"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:gravity="right"
                    android:letterSpacing="0.23"
                    android:text="@string/won"
                    android:textColor="@color/success"
                    android:textFontWeight="900"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="230dp"
                android:layout_gravity="bottom"
                android:src="@drawable/win_lose_circle3" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_weight="0.5"
                android:src="@drawable/win_lose_circle2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:src="@drawable/win_lose_circle3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/next_level"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="30dp"
                app:srcCompat="@drawable/next_level_icon" />

            <ImageView
                android:id="@+id/retry"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/win_retry_icon" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:src="@drawable/menu_icon" />

            <ImageView
                android:id="@+id/levels"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:src="@drawable/levels_icon" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>